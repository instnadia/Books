@model Book
<h1 class="display-4 mt-5" style="color: #368f8b">Edit book #@Model.BookId</h1>
<div class="mt-5">
    <form asp-action="update" asp-controller="Home" method="post">
        <div class="form-group">
            <label>Title</label>
            <span class="text-danger" asp-validation-for="title"></span>
            <input type="text" class="form-control" asp-for="title">
        </div>
        <div class="form-group">
            <label>Author</label>
            <span class="text-danger">@ViewBag.error</span>
            <select class="form-control" asp-for="AuthorId">
                <option>Select an author</option>
                @foreach (Author author in ViewBag.all_authors)
                {
                    <option value="@author.AuthorId">@author.name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label>Or, enter a new one:</label>
            <input type="text" class="form-control" name="other">
        </div>
        <div class="form-group">
            <span class="text-danger" asp-validation-for="desc"></span>
            <label>Description</label>
            <textarea class="form-control" rows="2" asp-for="desc"></textarea>
        </div>
        <button>Submit!</button>
    </form>
</div>